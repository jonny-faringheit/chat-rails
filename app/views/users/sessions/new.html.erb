<%= content_for :title, "BitChat | Вход" %>
<%= content_for :session_fonts do %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
<% end %>
<div class="min-h-screen flex justify-center items-center bg-gray-50 py-8 px-4">
  <div class="max-w-sm w-full">
    <div class="bg-white py-6 px-5 shadow-md rounded-lg">
      <%= form_for resource, as: resource_name, url: user_session_path(resource), html: { class: "space-y-4" } do |f| %>
        <%= render("users/shared/error_messages", resource: resource) %>
        
        <div class="text-center">
          <h2 class="font-['Dancing_Script'] font-bold text-4xl text-orange-500 mb-1">
            BitChat
          </h2>
          <p class="text-gray-600 text-xs">Войдите в свой аккаунт</p>
        </div>
        
        <hr class="border-gray-200">
        
        <div class="space-y-3">
          <div>
            <%= f.label :email, class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, 
                required: true, 
                placeholder: 'Введите email...', 
                autofocus: true, 
                autocomplete: "email", 
                class: "w-full px-2.5 py-1.5 border border-gray-300 rounded text-sm placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-orange-500 focus:border-transparent transition duration-150" %>
          </div>
          
          <div>
            <%= f.label :password, "Пароль", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password, 
                required: true, 
                placeholder: 'Введите пароль...', 
                autocomplete: "current-password", 
                class: "w-full px-2.5 py-1.5 border border-gray-300 rounded text-sm placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-orange-500 focus:border-transparent transition duration-150" %>
          </div>
        </div>
        
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-3 w-3 text-orange-500 focus:ring-orange-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, "Запомнить меня", class: "ml-1.5 block text-xs text-gray-700" %>
            </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Забыли пароль?", new_user_password_path, class: 'text-xs text-orange-500 hover:text-orange-600 transition duration-150' %>
            <% end %>
          </div>
        <% end %>
        
        <div>
          <%= f.submit "Войти", class: "w-full flex justify-center py-1.5 px-3 border border-transparent rounded shadow-sm text-sm font-medium text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-orange-500 transition duration-150 cursor-pointer" %>
        </div>
        
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-xs">
            <span class="px-2 bg-white text-gray-500">или</span>
          </div>
        </div>
        
        <div class="text-center">
          <span class="text-xs text-gray-600">
            Нет аккаунта?
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Зарегистрироваться", new_user_registration_path, class: 'font-medium text-orange-500 hover:text-orange-600 transition duration-150' %>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
