<%= content_for :title, "BitChat | Восстановление пароля" %>
<%= content_for :session_fonts do %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
<% end %>
<div class="min-h-screen flex justify-center items-center bg-gray-50 py-8 px-4">
  <div class="max-w-sm w-full">
    <div class="bg-white py-6 px-5 shadow-md rounded-lg">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
        <%= render("users/shared/error_messages", resource: resource) %>

        <div class="text-center">
          <h2 class="font-['Dancing_Script'] font-bold text-4xl text-orange-500 mb-1">
            BitChat
          </h2>
          <p class="text-gray-600 text-xs">Восстановление пароля</p>
        </div>

        <hr class="border-gray-200">

        <div class="space-y-3">
          <div>
            <%= f.label :email, class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email,
                required: true,
                placeholder: 'Введите email...',
                autofocus: true,
                autocomplete: "email",
                class: "w-full px-2.5 py-1.5 border border-gray-300 rounded text-sm placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-orange-500 focus:border-transparent transition duration-150" %>
            <p class="mt-1.5 text-xs text-gray-500">Мы отправим инструкции по восстановлению пароля на ваш email</p>
          </div>
        </div>

        <div>
          <%= f.submit "Отправить инструкции", class: "w-full flex justify-center py-1.5 px-3 border border-transparent rounded shadow-sm text-sm font-medium text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-orange-500 transition duration-150 cursor-pointer" %>
        </div>

        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-xs">
            <span class="px-2 bg-white text-gray-500">или</span>
          </div>
        </div>

        <div class="text-center">
          <span class="text-xs text-gray-600">
            Вспомнили пароль?
            <%= link_to "Войти", user_session_path, class: 'font-medium text-orange-500 hover:text-orange-600 transition duration-150' %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
