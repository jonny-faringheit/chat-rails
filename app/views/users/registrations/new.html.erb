<%= content_for :title, 'BitChat | Регистрация' %>
<%= content_for :session_fonts do %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
<% end %>
<div class="min-h-screen flex justify-center items-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="bg-white py-8 px-6 shadow-lg rounded-lg">
      <%= form_for resource, as: resource_name, url: user_registration_path(resource), html: { class: "space-y-6" } do |f| %>
        <div class="text-center">
          <h2 class="font-['Dancing_Script'] font-bold text-6xl text-orange-500 mb-2">
            BitChat
          </h2>
          <p class="text-gray-600 text-sm">Создайте новый аккаунт</p>
        </div>

        <hr class="border-gray-200">

        <%= render("users/shared/error_messages", resource: resource) %>

        <div class="space-y-4">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email,
                required: true,
                placeholder: 'Введите email...',
                autofocus: true,
                autocomplete: "email",
                class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition duration-150 invalid:border-red-500" %>
          </div>

          <div>
            <%= f.label :password, 'Пароль', class: 'block text-sm font-medium text-gray-700 mb-1' %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-500 mb-1">Минимум <%= @minimum_password_length %> символов</p>
            <% end %>
            <%= f.password_field :password,
                autocomplete: "new-password",
                placeholder: 'Введите пароль...',
                required: true,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition duration-150" %>
          </div>

          <div>
            <%= f.label :password_confirmation, 'Подтверждение пароля', class: 'block text-sm font-medium text-gray-700 mb-1' %>
            <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                placeholder: 'Подтвердите пароль...',
                required: true,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition duration-150" %>
          </div>
        </div>

        <div>
          <%= f.submit "Зарегистрироваться", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition duration-150 cursor-pointer" %>
        </div>

        <div class="text-center">
          <span class="text-sm text-gray-600">
            Уже есть аккаунт?
            <%- if controller_name != 'sessions' && controller_name != "passwords" %>
              <%= link_to "Войти", user_session_path, class: 'font-medium text-orange-500 hover:text-orange-600 transition duration-150' %>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
