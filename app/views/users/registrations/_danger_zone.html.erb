<!-- Danger Zone -->
<div class="mt-6 bg-white shadow-sm rounded-lg border border-gray-200">
  <div class="px-4 py-3 border-b border-gray-200">
    <h3 class="text-sm font-medium text-red-600">Опасная зона</h3>
  </div>
  <div class="p-4">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <h4 class="text-sm font-medium text-gray-900">Удаление аккаунта</h4>
        <p class="text-xs text-gray-600 mt-1">После удаления аккаунта восстановление невозможно. Все данные будут удалены.</p>
      </div>
      <%= button_to "Удалить аккаунт",
          registration_path(resource_name),
          data: {
            confirm: "Вы уверены? Это действие необратимо!",
            turbo_confirm: "Вы уверены? Это действие необратимо!"
          },
          method: :delete,
          class: "ml-4 px-3 py-1.5 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 cursor-pointer" %>
    </div>
  </div>
</div>
