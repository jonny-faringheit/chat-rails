<!-- Current Password Confirmation -->
<div class="pt-4 border-t border-gray-200">
  <div class="max-w-md">
    <%= form.label :current_password, "Текущий пароль для подтверждения", class: "block text-xs font-medium text-gray-700 mb-1" %>
    <%= form.password_field :current_password,
        autocomplete: "current-password",
        placeholder: "Введите текущий пароль",
        required: true,
        class: "w-full px-2 py-1.5 text-sm border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-orange-500 focus:border-orange-500 transition duration-150" %>
    <p class="mt-1 text-xs text-gray-500">Необходим для подтверждения изменений</p>
  </div>
</div>
