<!-- Password Section -->
<div class="space-y-4 pt-4 border-t border-gray-200">
  <h3 class="text-sm font-medium text-gray-900">Смена пароля</h3>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :password, "Новый пароль", class: "block text-xs font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password, 
          autocomplete: "new-password",
          placeholder: "Оставьте пустым, если не меняете",
          class: "w-full px-2 py-1.5 text-sm border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-orange-500 focus:border-orange-500 transition duration-150" %>
      <% if @minimum_password_length %>
        <p class="mt-1 text-xs text-gray-500">Минимум <%= @minimum_password_length %> символов</p>
      <% end %>
    </div>
    
    <div>
      <%= form.label :password_confirmation, "Подтверждение пароля", class: "block text-xs font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password_confirmation, 
          autocomplete: "new-password",
          placeholder: "Подтвердите пароль",
          class: "w-full px-2 py-1.5 text-sm border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-orange-500 focus:border-orange-500 transition duration-150" %>
    </div>
  </div>
</div>