<%# Generic button component %>
<%# Usage: render "shared/forms/button", text: "Save", type: "submit", style: "primary" %>

  base_classes = "px-4 py-2 text-sm font-medium rounded focus:outline-none focus:ring-2 focus:ring-offset-2 transition duration-150 cursor-pointer"

  style_classes = case local_assigns[:style]
  when "primary"
    "text-white bg-orange-500 hover:bg-orange-600 focus:ring-orange-500"
  when "danger"
    "text-white bg-red-600 hover:bg-red-700 focus:ring-red-500"
  when "secondary"
    "text-gray-700 bg-gray-200 hover:bg-gray-300 focus:ring-gray-500"
  else
    "text-white bg-orange-500 hover:bg-orange-600 focus:ring-orange-500"
  end

  all_classes = [base_classes, style_classes, local_assigns[:class]].compact.join(" ")
%>

<% if local_assigns[:type] == "submit" %>
  <%= form.submit text, class: all_classes %>
<% elsif local_assigns[:href] %>
  <%= link_to text, href, class: all_classes %>
<% else %>
  <button type="<%= local_assigns[:type] || 'button' %>" class="<%= all_classes %>">
    <%= text %>
  </button>
<% end %>
