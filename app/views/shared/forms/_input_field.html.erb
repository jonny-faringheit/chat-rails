<%# Generic input field component %>
<%# Usage: render "shared/forms/input_field", form: f, field: :name, label: "Name", type: :text, placeholder: "Enter name" %>

<div class="<%= local_assigns[:wrapper_class] || '' %>">
  <%= form.label field, label, class: "block text-xs font-medium text-gray-700 mb-1" %>
  <%= form.send(type || :text_field, field, {
        placeholder: placeholder,
        autocomplete: local_assigns[:autocomplete],
        required: local_assigns[:required],
        class: local_assigns[:input_class] || "w-full px-2 py-1.5 text-sm border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-orange-500 focus:border-orange-500 transition duration-150"
      }.compact) %>
  <% if local_assigns[:help_text] %>
    <p class="mt-1 text-xs text-gray-500"><%= help_text %></p>
  <% end %>
</div>
